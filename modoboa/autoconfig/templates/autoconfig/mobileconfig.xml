<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
"http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <payloadContent>
      <dict>
        <PayloadType>com.apple.mail.managed</PayloadType>
        <PayloadVersion>1</PayloadVersion>
        <PayloadIdentifier>{{ reverse_domain }}.email</PayloadIdentifier>
        <PayloadUUID>{{ content_uuid }}</PayloadUUID>
        <PayloadDisplayName>Mail</PayloadDisplayName>

        <EmailAccountDescription>Modoboa</EmailAccountDescription>
        <EmailAccountType>EmailTypeIMAP</EmailAccountType>
        <EmailAddress>{{ emailaddress }}</EmailAddress>
        <IncomingMailServerHostName>{{ connection_settings.imap.HOSTNAME }}</IncomingMailServerHostName>
        <IncomingMailServerPortNumber>{{ connection_settings.imap.PORT }}</IncomingMailServerPortNumber>
        <IncomingMailServerUseSSL>true</IncomingMailServerUseSSL>
        <IncomingMailServerUsername>{{ emailaddress }}</IncomingMailServerUsername>

        <OutgoingMailServerHostName>{{ connection_settings.smtp.HOSTNAME }}</OutgoingMailServerHostName>
        <OutgoingMailServerPortNumber>{{ connection_settings.smtp.PORT }}</OutgoingMailServerPortNumber>
        <OutgoingMailServerUseSSL>true</OutgoingMailServerUseSSL>
        <OutgoingMailServerUsername>{{ emailaddress }}</OutgoingMailServerUsername>
        <OutgoingPasswordSameAsIncomingPassword>true</OutgoingPasswordSameAsIncomingPassword>

      </dict>
    </payloadContent>
    <PayloadOrganization>Modoboa</PayloadOrganization>
    <PayloadDisplayName>Mail Configuration</PayloadDisplayName>
    <PayloadIdentifier>{{ reverse_domain }}.mailconfig</PayloadIdentifier>
    <PayloadUUID>{{ global_uuid }}</PayloadUUID>
    <PayloadVersion>1</PayloadVersion>
    <PayloadType>Configuration</PayloadType>
  </dict>
</plist>
